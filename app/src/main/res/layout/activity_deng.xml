<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DengActivity">

    <EditText
        android:id="@+id/et_zhang"
        android:hint="请输入账号"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_mi"
        android:hint="请输入密码"
        app:layout_constraintTop_toBottomOf="@id/et_zhang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="登录"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/bu_deng"
        app:layout_constraintTop_toBottomOf="@id/et_mi"
        app:layout_constraintRight_toLeftOf="@id/bu_zhu"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <Button
        android:text="注册"
        android:padding="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/bu_zhu"
        app:layout_constraintTop_toBottomOf="@id/et_mi"
        app:layout_constraintLeft_toRightOf="@id/bu_deng"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>